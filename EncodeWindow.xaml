<Window x:Class="CipherBreaker.NewEncodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CipherBreaker"
        mc:Ignorable="d"
        Title="EncodeWindow" Height="768" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Margin="10,20,10,10">
            <Button x:Name="StartEncodeButton" Content="开始" FontSize="24" FontWeight="Bold" Click="StartEncodeButton_Click"/>
            <Button x:Name="StopEncodeButton" Content="终止" FontSize="24" FontWeight="Bold" Click="StopEncodeButton_Click"/>
            <Button x:Name="GoOnEncodeButton" Content="继续" FontSize="24" FontWeight="Bold" Click="GoOnEncodeButton_Click"/>
            <Button x:Name="SaveEncodeButton" Content="保存" FontSize="24" FontWeight="Bold" Click="SaveEncodeButton_Click"
                    Margin="0,0,0,50"/>
            <Label Content="结果：" FontSize="24" FontWeight="Bold"/>
            <Label FontSize="24">
                <TextBlock TextWrapping="Wrap"/>
            </Label>
        </StackPanel>
    </Grid>
</Window>
