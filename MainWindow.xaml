<Window x:Class="CipherBreaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CipherBreaker"
        mc:Ignorable="d"
        Title="CipherBreaker" Height="768" Width="1024" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Cipher Breaker" FontSize="24" FontWeight="Bold" 
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <ListBox Grid.Row="1" x:Name="TaskListBox" FontSize="24" FontWeight="Bold" HorizontalContentAlignment="Center"
                 SelectionChanged="TaskListBox_SelectionChanged">
        </ListBox>
        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <Button x:Name="NewTaskButton" Content="新建任务" FontSize="24" FontWeight="Bold" Width="180"
                    Background="White" Click="NewTaskButton_Click"/>
            <Button x:Name="GuideButton" Content="使用手册" FontSize="24" FontWeight="Bold" Width="180"
                    Background="White" Click="GuideButton_Click"/>
            <Button x:Name="AlgorithmButton" Content="算法介绍" FontSize="24" FontWeight="Bold" Width="180"
                    Background="White" Click="AlgorithmButton_Click"/>
            <Button x:Name="OptionButton" Content="相关设置" FontSize="24" FontWeight="Bold" Width="180"
                    Background="White" Click="OptionButton_Click"/>
        </StackPanel>
        <Button Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,20"
                Name="DetailButton" Click="DetailButton_Click" Content="详情>>>>" FontSize="24" FontWeight="Bold"
                IsEnabled="False" Visibility="Hidden"/>
    </Grid>
</Window>
