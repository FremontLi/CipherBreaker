<Window x:Class="CipherBreaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CipherBreaker"
        mc:Ignorable="d"
        Title="CipherBreaker" Height="800" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="1" x:Name="TaskListBox" Padding="0,5,0,5" FontSize="24" FontWeight="Bold"/>
        <Line X1="0" Y1="50" X2="1200" Y2="50" Fill="Black" Stroke="Black" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <ListBox Grid.Column="1" Grid.Row="1">
        </ListBox>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>
            <Button Content="新建任务" VerticalAlignment="Center" Height="50" BorderThickness="0,0,0,0" FontWeight="Bold" FontSize="24"/>
            <Button Content="继续任务" VerticalAlignment="Center" Height="50" Grid.Column="1" BorderThickness="0,0,0,0" FontWeight="Bold" FontSize="24"/>
            <Button Content="工具用法" VerticalAlignment="Center" Height="50" Grid.Column="2" BorderThickness="0,0,0,0" FontWeight="Bold" FontSize="24"/>
            <Button Content="加密算法介绍" VerticalAlignment="Center" Height="50" Grid.Column="3" BorderThickness="0,0,0,0" FontWeight="Bold" FontSize="24"/>
            <Button Content="设置" VerticalAlignment="Center" Height="50" Grid.Column="4" BorderThickness="0,0,0,0" FontWeight="Bold" FontSize="24"/>
        </Grid>
        <Label Content="Cipher Breaker" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="50" FontSize="24" FontWeight="Bold" HorizontalContentAlignment="Center" Padding="5,10,5,5"/>
        <Grid/>

    </Grid>
</Window>
